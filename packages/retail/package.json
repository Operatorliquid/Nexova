{
  "name": "@nexova/retail",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./products": {
      "types": "./dist/products/index.d.ts",
      "import": "./dist/products/index.js"
    },
    "./stock": {
      "types": "./dist/stock/index.d.ts",
      "import": "./dist/stock/index.js"
    },
    "./orders": {
      "types": "./dist/orders/index.d.ts",
      "import": "./dist/orders/index.js"
    },
    "./payments": {
      "types": "./dist/payments/index.d.ts",
      "import": "./dist/payments/index.js"
    },
    "./customers": {
      "types": "./dist/customers/index.d.ts",
      "import": "./dist/customers/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --no-error-on-unmatched-pattern",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run --dir test/unit"
  },
  "dependencies": {
    "@nexova/shared": "workspace:*",
    "@nexova/core": "workspace:*",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  }
}
